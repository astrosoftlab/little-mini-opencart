{{ header }}
{{ menu }}
<div class="content">
	{% if orders %}
		<div class="table-responsive">
			<table class="table table-bordered table-hover sm:text-[14px] text-[10px]">
				<thead>
					<tr class="bg-orangeLight uppercase">
						<td class="text-end sm:px-[20px] sm:py-[12px] px-[10px] py-[6px]">{{ column_order_id }}</td>
						<td class="text-start sm:px-[20px] sm:py-[12px] px-[10px] py-[6px]">{{ column_customer }}</td>
						<td class="text-end sm:px-[20px] sm:py-[12px] px-[10px] py-[6px]">{{ column_product }}</td>
						<td class="text-start sm:px-[20px] sm:py-[12px] px-[10px] py-[6px]">{{ column_status }}</td>
						<td class="text-start sm:px-[20px] sm:py-[12px] px-[10px] py-[6px]">{{ column_date_added }}</td>
						<td></td>
					</tr>
				</thead>
				<tbody>
					{% for order in orders %}
						<tr>
							<td class="text-end sm:px-[20px] sm:py-[12px] px-[10px] py-[6px]">#{{ order.order_id }}</td>
							<td class="text-start sm:px-[20px] sm:py-[12px] px-[10px] py-[6px]">{{ order.name }}</td>
							<td class="text-end sm:px-[20px] sm:py-[12px] px-[10px] py-[6px]">{{ order.products }}</td>
							<td class="text-start sm:px-[20px] sm:py-[12px] px-[10px] py-[6px]">{{ order.status }}</td>
							<td class="text-start sm:px-[20px] sm:py-[12px] px-[10px] py-[6px]">{{ order.date_added }}</td>
							<td class="text-end sm:px-[20px] sm:py-[12px] px-[10px] py-[6px]">
								<a href="#" data-bs-toggle="tooltip" title="{{ button_view }}" class="btn btn-info">
									{# <i class="fa-solid fa-eye"></i> #}
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="flex justify-between mt-[30px]">
			<div class="col-sm-6 text-end"></div>
			<div class="col-sm-6 text-start">{{ pagination }}</div>
		</div>
	{% else %}
		<p>{{ text_no_results }}</p>
	{% endif %}
	<div class="d-inline-block pt-2 pd-2 w-100">
		<div class="flex sm:mt-[20px] mt-[15px]">
			<a href="{{ continue }}" class="block text-center min-w-[170px] py-[12px] bg-indigo text-[white] font-semibold uppercase">{{ button_continue }}</a>
		</div>
	</div>
</div></div></div>{{ footer }}
